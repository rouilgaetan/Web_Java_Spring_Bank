<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BankRootJPAPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <non-jta-data-source>Bank</non-jta-data-source>
    <class>modeles.UserEntity</class>
    <class>modeles.AccountsEntity</class>
    <class>modeles.OperationsEntity</class>
    <class>modeles.CounselorEntity</class>
    <class>modeles.CurrentEntity</class>
    <class>modeles.ParticularEntity</class>
    <class>modeles.SavingEntity</class>
    <class>modeles.ProfessionalEntity</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
